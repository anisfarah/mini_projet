



{% extends 'baseC.html.twig' %}

{% block title %}Modifier catégorie
{% endblock %}

{% block body %}
	<style>
		#cont {
			width: 80%;
		}
	</style>

	<body>
		<br/>
		<div id="cont" class="card border-success container"><br>
			<div class="card-header">
				<h5>Modifier Catégorie</h5>
			</div>
			<div class="card-body">
				<form style="margin-top:-30px" method="post" action="{{ path('Postedit_category',{'id':id}) }}">
					<div class="form-group">
						<label for="id" class="form-label mt-4">nom</label>
						<input type="text" name="cat_name" value="{{nom}}" class="form-control" id="id" placeholder="Entrez la categorie">
					</div>
					<br/>
					<div style="text-align:center">
						<button type="submit" class="btn btn-success">Modifier</button>
					</div>
				</form>
			</div>
		</div>
	</body>

{% endblock %}
