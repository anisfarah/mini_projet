


{% extends 'baseC.html.twig' %}

{% block title %}Modifier sous catègorie
{% endblock %}

{% block body %}
	<style>
		#cont {
			width: 80%;
		}
	</style>

	<body>
		<br/>
		<div id="cont" class="card border-warning container"><br>
			<div class="card-header">
				<h5>Modifier sous catégorie</h5>
			</div>
			<div class="card-body">
				<form style="margin-top:-30px" method="post" action="{{ path('Postedit_souscategory',{'id':id}) }}">
					<div class="form-group">
						<label for="id" class="form-label mt-4">Nom</label>
						<input class="form-control" name="souscat_name" value={{nomSousCat}} id="id" placeholder="Entrez la sous catègorie">
					</div>
					<div class="form-group">
						<label for="role" class="form-label mt-4">Catègorie</label>
						<select class="form-select" id="slc" name="id_cat">
							{% for cat in allCat %}
								{% if cat.idCategorie == category.idCategorie %}
									<option value="{{cat.idCategorie}}" selected>{{cat.nomCategorie}}</option>
								{% else %}
									<option value="{{cat.idCategorie}}">{{cat.nomCategorie}}</option>
								{% endif %}
							{% endfor %}
						</select>
					</div>
					<br/>
					<div style="text-align:center">
						<button type="submit" class="btn btn-warning">Modifier</button>
					</div>
				</form>
			</div>
		</div>
	</body>

{% endblock %}
